<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_margin="3dp"
        android:padding="3dp"
        android:layout_height="wrap_content">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="4dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="0dp"
            app:strokeColor="#5D5D5D"
            android:backgroundTint="@color/white"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    android:background="@color/lighht_blue"
                    android:id="@+id/tl">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Order id # 123456"
                        android:textColor="@color/white"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginTop="6dp"
                        android:layout_marginStart="6dp"
                        android:id="@+id/order_id" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status:"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:layout_below="@id/order_id"
                        android:layout_alignStart="@id/order_id"
                        android:id="@+id/s_head" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@id/s_head"
                        android:layout_toEndOf="@id/s_head"
                        android:text="Pending"
                        android:layout_marginBottom="6dp"

                        android:layout_marginStart="6dp"
                        android:textSize="17sp"
                        android:textColor="#09F613" />


                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_map_24"
                    app:layout_constraintTop_toBottomOf="@id/tl"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/map_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gulshan e iqbal karachi "
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:maxEms="22"
                    android:layout_marginEnd="3dp"
                    android:ellipsize="end"
                    android:textColor="#FA919090"
                    android:id="@+id/location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/map_icon"
                    app:layout_constraintTop_toTopOf="@id/map_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_access_time_24"
                    app:layout_constraintTop_toBottomOf="@id/location"
                    app:layout_constraintStart_toStartOf="@id/map_icon"
                    android:layout_marginTop="4dp"
                    android:id="@+id/clock" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12:00 pm - 9:00 am "
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:layout_marginEnd="3dp"
                    android:ellipsize="end"
                    android:textColor="#FA919090"
                    android:id="@+id/time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clock"
                    app:layout_constraintTop_toTopOf="@id/clock" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_attach_money_24"
                    app:layout_constraintTop_toBottomOf="@id/clock"
                    app:layout_constraintStart_toStartOf="@id/clock"
                    android:layout_marginTop="4dp"
                    android:id="@+id/dist_icon"
                    app:tint="#5D5D5D" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Rs. 1000"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:layout_marginEnd="3dp"
                    android:ellipsize="end"
                    android:textColor="#FA919090"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="12dp"
                    android:id="@+id/distance"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dist_icon"
                    app:layout_constraintTop_toTopOf="@id/dist_icon" />


            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>