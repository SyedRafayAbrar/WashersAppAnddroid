<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="88dp"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                tools:context=".Fragments.CatDetailFragment">





                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:id="@+id/top_bar"
                    android:background="@color/lighht_blue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:id="@+id/back_btn"
                        android:layout_centerVertical="true"
                        android:src="@drawable/baseline_arrow_back_ios_24"
                        app:tint="@color/white" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/order_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="Order # 1234"
                    android:textColor="#5D5D5D"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/top_bar" />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/baseline_local_phone_24"
                    app:layout_constraintTop_toBottomOf="@id/order_num"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="22dp"
                    android:layout_marginTop="24dp"
                    android:id="@+id/clock"
                    app:tint="#5D5D5D" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Tap to call vendor"
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:layout_marginEnd="3dp"
                    android:ellipsize="end"
                    android:textColor="#FA919090"
                    android:id="@+id/call_num"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clock"
                    app:layout_constraintTop_toTopOf="@id/clock" />


                <RelativeLayout
                    android:id="@+id/order_rl"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/call_num"
                    app:layout_constraintStart_toStartOf="parent"
                   >

                    <TextView
                        android:id="@+id/order_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:text="Order Date :" />

                    <TextView
                        android:id="@+id/ord_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:layout_toEndOf="@id/order_title"
                        android:gravity="end"
                        android:text="12/24/2024" />


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/day_rl"
                    app:layout_constraintTop_toBottomOf="@id/order_rl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Day :"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:id="@+id/day_title"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/day_date"
                        android:layout_toEndOf="@id/day_title"
                        android:gravity="end"
                        android:layout_marginEnd="16dp"/>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:id="@+id/time_rv"
                    app:layout_constraintTop_toBottomOf="@id/day_rl"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Time :"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:id="@+id/time_title"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="02:00 P.m - 03:00 A.M"
                        android:layout_alignParentEnd="true"
                        android:id="@+id/time_date"
                        android:layout_toEndOf="@id/time_title"
                        android:gravity="end"
                        android:layout_marginEnd="16dp"/>



                </RelativeLayout>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="16dp"
                    android:text="Services Selected"
                    app:layout_constraintTop_toBottomOf="@id/time_rv"
                    app:layout_constraintStart_toStartOf="@id/time_rv"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/ser_title"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="16dp"
                    android:text="Car Half wash"
                    app:layout_constraintTop_toBottomOf="@id/ser_title"
                    app:layout_constraintStart_toStartOf="@id/time_rv"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/ser_type"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginStart="16dp"
                    android:text="Variation : "
                    app:layout_constraintTop_toBottomOf="@id/ser_type"
                    app:layout_constraintStart_toStartOf="@id/time_rv"

                    android:id="@+id/var_type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="4dp"
                    android:text="Car "
                    android:textColor="@color/lighht_blue"
                    app:layout_constraintTop_toTopOf="@id/var_type"
                    app:layout_constraintBottom_toBottomOf="@id/var_type"
                    app:layout_constraintStart_toEndOf="@id/var_type"


                    android:id="@+id/var_title"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="12dp"
                    android:background="#5D5D5D"
                    android:id="@+id/view"
                    app:layout_constraintTop_toBottomOf="@id/var_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="@color/pgreen"

                    android:text="Confirm Order"
                    android:textColor="@color/black"
                    android:id="@+id/confrim_btn"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/confrim_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="24dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="#F44336"
                    android:text="Cancel Order With Reason"
                    android:textColor="@color/white"
                    android:id="@+id/cancel_btn"/>





            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="22dp"
            android:background="@color/lighht_blue"
            android:layout_alignParentBottom="true"
            android:id="@+id/btm_layout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/lighht_blue"
                android:layout_marginBottom="12dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/til"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Total Service \n Amount"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/til"
                    android:text="Rs.10000"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"

                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>


</layout>