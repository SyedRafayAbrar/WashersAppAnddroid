<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Activities.Earning">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/top_bar"
            android:background="@color/lighht_blue"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"

                android:id="@+id/back_btn"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_arrow_back_ios_24"
                app:tint="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="April Earning"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:id="@+id/month"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Earning"
            android:textSize="22sp"
            android:textColor="#5D5D5D"
            android:id="@+id/title"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/top_bar"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/title"
            android:text="Rs. 23000"
            android:textColor="#5D5D5D"
            android:gravity="center"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:textStyle="bold"

            android:id="@+id/earning" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A1A1A1"
            app:layout_constraintTop_toBottomOf="@id/earning"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:id="@+id/v1"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commision\nbased order"
            app:layout_constraintTop_toBottomOf="@id/v1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:textColor="#5D5D5D"
            android:id="@+id/co" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/co"
            app:layout_constraintTop_toTopOf="@id/co"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            android:text="24"
            android:textColor="#5D5D5D"
            android:layout_marginEnd="12dp"
            android:id="@+id/commision" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Commision\nTo be paid"
            app:layout_constraintTop_toBottomOf="@id/co"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="26dp"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            android:textColor="#5D5D5D"
            android:id="@+id/cp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/co"
            app:layout_constraintTop_toTopOf="@id/cp"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="end"
            android:text="10% of 24 order =2000"
            android:textColor="#5D5D5D"
            android:layout_marginEnd="12dp"
            android:id="@+id/commision_tbp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#A1A1A1"
            app:layout_constraintTop_toBottomOf="@id/commision_tbp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="16dp"
            android:id="@+id/v2"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="40dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Earnings After\nCommission Paid"

            android:textSize="22sp"
            android:textColor="#5D5D5D"
            android:id="@+id/sec_title"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/v2"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/sec_title"
            android:text="Rs. 18300"
            android:textColor="#5D5D5D"
            android:gravity="center"
            android:layout_marginTop="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="24sp"
            android:textStyle="bold"

            android:id="@+id/comm_earning" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>