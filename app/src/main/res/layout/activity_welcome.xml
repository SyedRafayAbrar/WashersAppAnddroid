<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root"
        android:background="@color/white"
        tools:context=".Activities.WelcomeActivity">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/w_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="60dp"
            android:id="@+id/logo" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/bubbles"
            android:layout_marginTop="50dp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Continue as a Guest"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:id="@+id/guest_tv" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/guest_tv"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="27dp"
            app:cornerRadius="12dp"
            android:backgroundTint="@color/white"
            android:text="SignUp"
            android:textSize="16sp"
            android:id="@+id/signup_tv"
            android:textColor="@color/lighht_blue" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintBottom_toTopOf="@id/signup_tv"
            android:layout_marginStart="26dp"
            android:layout_marginEnd="27dp"
            android:id="@+id/login"
            android:layout_marginBottom="12dp"
            app:cornerRadius="12dp"
            android:textColor="@color/lighht_blue"
            android:textSize="16sp"
            android:text="Login"
            android:backgroundTint="@color/white" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>