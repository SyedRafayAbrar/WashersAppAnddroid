<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Fragments.LoginFragment">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textColor="#5D5D5D"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="22sp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:id="@+id/s_heading" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User Name"
            android:textColor="#5D5D5D"
            app:layout_constraintTop_toBottomOf="@id/s_heading"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:textSize="17sp"
            android:id="@+id/un_heading" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/name_et"
            android:maxLines="1"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/un_heading"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"

            android:textColor="@color/black"

            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textColor="#5D5D5D"
            app:layout_constraintTop_toBottomOf="@id/name_et"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginTop="32dp"
            android:textSize="17sp"
            android:id="@+id/p_heading" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/password_et"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/p_heading"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="8dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/black"

            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            app:layout_constraintTop_toBottomOf="@id/password_et"
            android:text="Login"
            android:layout_marginTop="50dp"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:cornerRadius="12dp"
            android:id="@+id/login"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/lighht_blue" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:text="Dont have an account ?" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create An Account"
                android:textSize="16sp"

                android:textColor="@color/lighht_blue"
                android:layout_marginStart="2dp" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>