<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/white"
        tools:context=".Fragments.SignupFragment">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:backgroundTint="@color/pgreen"
            app:cornerRadius="12dp"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="20dp"
            android:text="Vendor Signup"
            android:id="@+id/vendor_signup"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor SignUp"
            android:layout_marginTop="22dp"
            android:textColor="#5D5D5D"
            app:layout_constraintTop_toBottomOf="@id/vendor_signup"
            app:layout_constraintStart_toStartOf="parent"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="20dp"
            android:id="@+id/s_heading" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/name_et"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/s_heading"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:hint="User Name"
            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/shop_name_et"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/s_heading"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:hint="Shop Name"
            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/email_et"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/name_et"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:hint="Email"
            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/address_et"

            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/name_et"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:hint="Address"
            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/contact_no"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/email_et"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:inputType="phone"
            android:maxLines="1"
            android:textColor="@color/black"
            android:hint="Contact Number"
            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />


        <EditText
            android:layout_width="match_parent"
            android:id="@+id/n_password"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/contact_no"
            app:layout_constraintStart_toStartOf="@id/contact_no"
            app:layout_constraintEnd_toEndOf="@id/contact_no"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/black"
            android:hint="New Password"
            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />

        <EditText
            android:id="@+id/c_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:maxLines="1"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:textColor="@color/black"
            android:textColorHint="#504F4F"
            app:layout_constraintBottom_toTopOf="@id/signup"
            app:layout_constraintEnd_toEndOf="@id/contact_no"
            app:layout_constraintStart_toStartOf="@id/contact_no"
            app:layout_constraintTop_toBottomOf="@id/n_password"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"
            android:maxLines="1"
            android:maxEms="22"
            android:singleLine="true"
            android:ellipsize="end"
            android:hint="Select Location"
            android:inputType="none"
            android:paddingStart="12dp"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@color/black"
            android:textColorHint="#504F4F"
            app:layout_constraintBottom_toTopOf="@id/signup"
            app:layout_constraintEnd_toEndOf="@id/contact_no"
            app:layout_constraintStart_toStartOf="@id/contact_no"
            app:layout_constraintTop_toBottomOf="@id/n_password"
            app:layout_constraintVertical_bias="0.0" />
        <Spinner
            android:id="@+id/area_spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="26dp"

            android:paddingStart="12dp"
            android:textColor="@color/black"
            android:textColorHint="#504F4F"
            app:layout_constraintBottom_toTopOf="@id/signup"
            app:layout_constraintEnd_toEndOf="@id/contact_no"
            app:layout_constraintStart_toStartOf="@id/contact_no"
            app:layout_constraintTop_toBottomOf="@id/n_password"
            app:layout_constraintVertical_bias="0.0" />
        <EditText
            android:layout_width="match_parent"
            android:id="@+id/shop_open_time"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/name_et"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:focusable="false"
            android:clickable="true"
            android:textColor="@color/black"
            android:hint="Shop opening time     "
            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />

        <EditText
            android:layout_width="match_parent"
            android:id="@+id/shop_close_time"
            android:layout_height="50dp"
            android:inputType="textEmailAddress"
            app:layout_constraintTop_toBottomOf="@id/name_et"
            app:layout_constraintStart_toStartOf="@id/s_heading"
            app:layout_constraintEnd_toEndOf="@id/s_heading"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            android:layout_marginTop="16dp"
            android:maxLines="1"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="6dp"
            android:textColor="@color/black"
            android:hint="Shop close time     "
            android:paddingStart="12dp"
            android:textColorHint="#504F4F" />
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginEnd="26dp"
            android:layout_marginStart="26dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="Signup"
            android:textColor="@color/white"
            android:textSize="17sp"
            app:cornerRadius="12dp"
            android:id="@+id/signup"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@color/lighht_blue" />


    </LinearLayout>
</ScrollView>

</layout>