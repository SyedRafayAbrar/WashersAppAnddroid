<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="85dp"
            android:background="@color/white">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                tools:context=".Fragments.CatDetailFragment">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:src="@drawable/download"
                    android:scaleType="centerCrop"
                    android:id="@+id/heading_img"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"

                    android:background="@color/lighht_blue"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:id="@+id/back_btn"
                        android:layout_centerVertical="true"
                        android:src="@drawable/baseline_arrow_back_ios_24"
                        app:tint="@color/white" />
                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@id/heading_img"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="Fab Car Wash"
                    android:textColor="#5D5D5D"
                    android:textStyle="bold"
                    android:textSize="28sp"
                    android:id="@+id/shop_name" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_map_24"
                    app:layout_constraintTop_toBottomOf="@id/shop_name"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:id="@+id/map_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Gulshan e iqbal karachi "
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:maxEms="22"
                    android:layout_marginEnd="3dp"
                    android:ellipsize="end"
                    android:textColor="#FA919090"
                    android:id="@+id/location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/map_icon"
                    app:layout_constraintTop_toTopOf="@id/map_icon" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_access_time_24"
                    app:layout_constraintTop_toBottomOf="@id/location"
                    app:layout_constraintStart_toStartOf="@id/map_icon"
                    android:layout_marginTop="4dp"
                    android:id="@+id/clock" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="12:00 pm - 9:00 am "
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:layout_marginEnd="3dp"
                    android:ellipsize="end"
                    android:textColor="#FA919090"
                    android:id="@+id/time"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/clock"
                    app:layout_constraintTop_toTopOf="@id/clock" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_location_on_24"
                    app:layout_constraintTop_toBottomOf="@id/clock"
                    app:layout_constraintStart_toStartOf="@id/clock"
                    android:layout_marginTop="4dp"
                    android:id="@+id/dist_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="5 Km "
                    android:textSize="16sp"
                    android:layout_marginStart="4dp"
                    android:maxLines="1"
                    android:layout_marginEnd="3dp"
                    android:ellipsize="end"
                    android:textColor="#FA919090"
                    android:id="@+id/distance"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/dist_icon"
                    app:layout_constraintTop_toTopOf="@id/dist_icon" />

                <RatingBar
                    android:id="@+id/rat_bar"
                    style="@style/Widget.AppCompat.RatingBar.Indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="12dp"
                    android:rating="4.2"
                    android:theme="@style/RatingBar"
                    app:layout_constraintEnd_toStartOf="@+id/materialButton"
                    app:layout_constraintHorizontal_bias="0.09"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dist_icon" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/materialButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cornerRadius="12dp"
                    android:text="Reviews"
                    android:backgroundTint="@color/lighht_blue"
                    android:layout_marginEnd="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/rat_bar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Date"
                    android:textColor="#5D5D5D"
                    android:id="@+id/sd"
                    android:layout_marginTop="12dp"
                    app:layout_constraintTop_toBottomOf="@id/rat_bar"
                    app:layout_constraintStart_toStartOf="@id/dist_icon" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"

                    app:layout_constraintTop_toBottomOf="@id/sd"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:id="@+id/date_cv">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_toStartOf="@id/d_icon"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:paddingStart="12dp"
                            android:text="12-03-2024"
                            android:id="@+id/date_tv" />

                        <ImageView
                            android:id="@+id/d_icon"
                            android:layout_centerVertical="true"
                            android:layout_width="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/baseline_arrow_drop_down_24" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select Time"
                    android:textColor="#5D5D5D"
                    android:visibility="gone"
                    android:id="@+id/td"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/date_cv"
                    app:layout_constraintStart_toStartOf="@id/dist_icon" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/time_rcv"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"

                    android:layout_marginTop="4dp"

                    app:layout_constraintTop_toBottomOf="@id/td"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Services Offered"
                    android:textColor="#5D5D5D"
                    android:id="@+id/so"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/time_rcv"
                    app:layout_constraintStart_toStartOf="@id/dist_icon" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginTop="6dp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/so"
                    android:id="@+id/services_rcv" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select options "
                    android:textColor="#5D5D5D"
                    android:id="@+id/slo"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/services_rcv"
                    app:layout_constraintStart_toStartOf="@id/dist_icon" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"

                    app:layout_constraintTop_toBottomOf="@id/slo"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp"
                    android:id="@+id/select_cv">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="match_parent">

                        <Spinner
                            android:layout_width="match_parent"

                            android:layout_height="wrap_content"
                            android:id="@+id/veh_spinner" />
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>


                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    app:layout_constraintTop_toBottomOf="@id/select_cv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="5dp"
                    android:id="@+id/cr_btn"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:backgroundTint="@color/lighht_blue"
                    android:text="Create Order"
                    app:cornerRadius="12dp"
                    android:textStyle="bold" />




            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.core.widget.NestedScrollView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="22dp"
            android:background="@color/lighht_blue"
            android:layout_alignParentBottom="true"
            android:id="@+id/btm_layout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/lighht_blue"
                android:layout_marginBottom="12dp"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/til"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:text="Total Service \n Amount"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@id/til"
                    android:text="Rs.0"
                    android:id="@+id/amount"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:textStyle="bold"

                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</layout>